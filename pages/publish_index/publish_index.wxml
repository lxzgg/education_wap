<scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
    <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
        <view class="nav-item {{currentTab == idx ?'active':''}}"  data-current="{{idx}}" data-id="{{navItem.id}}" bindtap="switchNav">{{navItem.cate_name}}</view>
    </block>
</scroll-view>
<view class="talk-list">
    <view class="talk-item" wx:for="{{content_list}}" wx:key="{{item.id}}">
        <view class="user-header">
            <view class="header-l">
                <view class="header">
                    <image src="{{item.head_img}}"></image>
                </view>
                <view class="header-c">
                    <view class="user-name">{{item.add_user}}</view>
                    <!--<view class="nike-name">学生-小豆豆</view>-->
                </view>
            </view>
        </view>
        <view class="content">
            <view>{{item.content}}</view>
            <image src="/image/ppp.jpg"></image>
        </view>
        <view class="our-bottom">
            <view class="bottom">
                <view class="bottom-item">
                    <text class="icon icon-dianzan {{ item.is_remard ? 'active' : ''}} " data-id="{{item.id}}" data-index="{{index}}" bindtap="bindZan"></text>
                    <text class="number">{{item.like_num}}</text>
                </view>
                <view class="bottom-item">
                    <view class="icon icon-iconfontpinglun" data-id="{{item.id}}" bindtap="bindComment"></view>
                    <view class="number">{{item.eval_num}}</view>
                </view>
                <view class="bottom-item">
                    <view class="icon icon-tubiao_liulan" data-id="{{item.id}}" bindtap="bindZan"></view>
                    <view class="number">{{item.browser_num}}</view>
                </view>
                <view class="bottom-item">
                    <view class="icon icon-fenxiang" data-id="{{item.id}}"></view>
                    <view class="number">0</view>
                </view>
            </view>
        </view>
    </view>
</view>
