/**app.wxss**/

.list .item {
  display: flex;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: #f9f9f9;
  margin-top: 10rpx;
}

.list .item .name {
  display: flex;
}

.list .item .name .btn-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
}

.list .item .name .name-text {
  width: 140rpx;
  font-size: 28rpx;
  line-height: 65rpx;
  color: #333333;
  margin-right: 20rpx;
}

.list .item .name .name-input {
  padding-top: 7rpx;
}

.list .item .name .name-input input {
  font-size: 24rpx;
}

.list .item .name .img {
  width: 62rpx;
  height: 62rpx;
}

.list .item .name .img image {
  width: 100%;
  height: 100%;
}

.list .item .sp-right {
  display: flex;
}

.list .item .sp-right .text {
  font-size: 24rpx;
  color: #999999;
  line-height: 65rpx;
  margin-right: 5rpx;
}

.list .item .icon {
  line-height: 65rpx;
}

.list .item:first-child {
  margin-top: 0;
}

.post {
  width: 443rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 60rpx;
  background-color: #577ef1;
  color: #ffffff;
  margin: 170rpx auto 0 auto;
}

/*使屏幕变暗 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  /*height: 480rpx;*/
  background-color: #ffffff;
  overflow: hidden;
  position: fixed;
  /*margin:0 auto;
  left:auto;
  right:auto;*/
  top: 25%;
  left: 18%;
  width: 64%;
  z-index: 2000;
}

.commodity_attr_box image {
  max-height: 211rpx;
  max-width: 211rpx;
  margin: 64rpx 0 0 140rpx;
}

.commodity_attr_box button {
  width: 254rpx;
  height: 64rpx;
  background-image: linear-gradient(90deg, #7796f4 0%, #4e77f0 100%);
  border-radius: 10rpx;
  color: #fff;
  line-height: 64rpx;
  text-align: center;
  font-size: 25.26rpx;
  margin: 18rpx auto;
}

.commodity_attr_box text {
  display: block;
  font-size: 22.74rpx;
  color: #999999;
  text-align: center;
}

.del_btn {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-top: 25rpx;
}
