/**app.wxss**/

.list .item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.list .item .tags .tag {
  font-size: 20rpx;
  width: 57rpx;
  border: 1rpx solid #ffaa00;
  color: #ffaa00;
  text-align: center;
  border-radius: 60rpx;
  padding: 5rpx 5rpx;
  margin-top: 5rpx;
}

.list .item .item-content {
  margin-left: 10rpx;
  width: 100%;
}

.list .item .item-content .content-info {
  font-size: 30rpx;
  line-height: 36rpx;
}

.list .item .item-content .content-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.list .item .item-content .content-bottom .look {
  font-size: 24rpx;
  line-height: 58rpx;
  color: #999999;
}

.list .item .item-content .content-bottom .bottom-btn {
  display: flex;
}

.list .item .item-content .content-bottom .bottom-btn .text {
  font-size: 24rpx;
  line-height: 58rpx;
  color: #ffaa00;
}

.list .item .item-content .content-bottom .bottom-btn .btn-l {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 60rpx;
  border: 1rpx solid #ffaa00;
  color: #ffaa00;
  margin-left: 40rpx;
}

.list .item .item-content .content-bottom .bottom-btn .btn-r {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 60rpx;
  border: 1rpx solid #999999;
  color: #999999;
  margin-left: 10rpx;
}
