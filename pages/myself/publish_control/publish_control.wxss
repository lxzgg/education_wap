/**app.wxss**/

.list .item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.list .item .tags .tag {
  font-size: 20rpx;
  max-width: 100rpx;
  border: 1rpx solid #ffaa00;
  color: #ffaa00;
  text-align: center;
  border-radius: 60rpx;
  padding: 5rpx 5rpx;
  margin-top: 5rpx;
}

.list .item .item-content {
  margin-left: 10rpx;
flex:1;
}

.list .item .item-content .content-info {
  font-size: 30rpx;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  word-wrap: break-word;
}

.list .item .item-content .content-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.list .item .item-content .content-bottom .look {
  font-size: 24rpx;
  line-height: 58rpx;
  color: #999999;
}

.list .item .item-content .content-bottom .bottom-btn {
  display: flex;
}

.list .item .item-content .content-bottom .bottom-btn .text {
  font-size: 24rpx;
  line-height: 58rpx;
  color: #ffaa00;
}

.list .item .item-content .content-bottom .bottom-btn .btn-l {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 60rpx;
  border: 1rpx solid #ffaa00;
  color: #ffaa00;
  margin-left: 40rpx;
}

.list .item .item-content .content-bottom .bottom-btn .btn-r {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 60rpx;
  border: 1rpx solid #999999;
  color: #999999;
  margin-left: 40rpx;
}

.section .btn {
  width: 190rpx;
  height: 60rpx;
  color: #ffaa00;
  font-size: 30rpx;
  line-height: 60rpx;
  background: #fff;
  border: 1rpx solid #ffaa00;
}

.section .btn:first-child {
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.section .btn:last-child {
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 22rpx auto;
  text-align: center;
}

.section .active {
  background: #ffaa00;
  color: #fff;
}
