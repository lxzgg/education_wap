/**app.wxss**/

.item {
  display: flex;
  padding: 40rpx;
  border-bottom: 1rpx solid #eeeeee;
  height: 40rpx;
  overflow: hidden;
}

.item .name {
  font-size: 28rpx;
  width: 182rpx;
  line-height: 45rpx;
}

.item input {
  line-height: 61rpx;
  font-size: 28rpx;
}

.item .name-content {
  font-size: 28rpx;
}

.item radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  font-size: 0;
  background-color: #5179f0;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.item radio .wx-radio-input.wx-radio-input-checked {
  border: none !important;
}

.item radio {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #666;
  font-size: 0;
  margin-top: 5rpx;
}

.item radio .wx-radio-input {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  border: none;
}

.item radio-group {
  line-height: 10rpx;
  display: flex;
}

.item radio-group label {
  line-height: 10rpx;
  display: flex;
  width: 135rpx;
}

.item radio-group label text {
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999999;
}

.item radio-group label.active text {
  color: #333333;
}

.item .picker {
  font-size: 24rpx;
  line-height: 40rpx;
}

.item.sp {
  overflow: initial;
  padding-top: 35rpx;
  padding-bottom: 46rpx;
  box-sizing: content-box;
}

.item.sp button {
  background-color: #ffaa00;
  color: #ffffff;
  font-size: 24rpx;
  padding: 28rpx 10rpx;
  width: 200rpx;
  line-height: 2rpx;
}
.subBtn{
  width: 630rpx;
	height: 70rpx;
	background-image: linear-gradient(90deg, 
		#7796f4 0%, 
		#4e77f0 100%);
	box-shadow: 0rpx 1rpx 7rpx 0rpx 
		rgba(130, 129, 129, 0.34);
	border-radius: 35rpx;
  margin-top: 100rpx;
  line-height: 70rpx;
  color: #fff;
}
