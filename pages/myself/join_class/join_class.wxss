/* pages/myself/invit_teacher/invit_teacher.wxss */
.section {
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding:  20rpx 43rpx;
  text-align: center;
  align-items: center;
}

.section-btn button {
  min-width: 215rpx;
  height: 70rpx;
  background-color: #ffaa00;
  box-shadow: 0rpx 0rpx 9rpx 0rpx rgba(130, 129, 129, 0.34);
  border-radius: 14rpx 10rpx 10rpx 10rpx;
  color: #fff;
  font-size: 30rpx;
  padding: 0 5rpx;
  line-height: 70rpx;
}

.section__title {
  font-size: 30rpx;
  color: #333333;
  min-width: 120rpx;
  line-height: 56rpx;
}

.section-input {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  text-align: left;
  padding-left: 10rpx;
}

.class_item {
  text-align: center;
  font-size: 30rpx;
  line-height: 44rpx;
  /*color: #ffffff;*/
  width: 78rpx;
  height: 44rpx;
  border-radius: 10rpx;
  border: solid 1rpx #74b8fd;
  /*padding: 1rpx;*/
}

.btn-area button {
  width: 330rpx;
  height: 75rpx;
  background-image: linear-gradient(90deg, #7595f3 0%, #4e77f0 100%);
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(130, 129, 129, 0.34);
  border-radius: 37rpx;
  color: #ffffff;
  font-size: 26rpx;
  text-align: center;
  line-height: 75rpx;
  margin-top: 100rpx;
}
.section .btn{
  display: flex;
  flex-wrap: wrap; 
}
.section .btn .class_item{
   margin: 0 15rpx 15rpx 0; 
}
.section .class_item input{
    width: 150rpx;
    text-align: left;
    line-height: 44rpx;
    padding-left: 10rpx;
}
.section .section-input .other-input{
    padding: 0;
    min-width: 150rpx;
}
.item_active{
    color: #fff;
    background-color: #74b8fd;
}
.tips{
    width: 100%;
    line-height: 50rpx;
	background-color: #eeeeee;
    font-size: 28rpx;
    color: #999;
    padding-left: 20rpx;
}
