/* pages/account/account.wxss */
.containor{
    font-family: MicrosoftYaHei;
	font-size: 28rpx;
    line-height: 70rpx;
}
.containor image {
   width: 100%;
   max-height: 350rpx;
}
.left-title text,.right-title text{
	display: block;
}
.left-title text,.right-title text{
	width: 48rpx;
	height: 24rpx;
	font-size: 24rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.right-title image,.left-title image{
	max-width: 24rpx;
	max-height: 12rpx;
}
.left-title{
	position: absolute;
	top: 280rpx;
	left: 150rpx;
}
.right-title{
	position: absolute;
	top: 280rpx;
	right: 130rpx;
}
.active,.left-title text{
  	color: #7796f4;
}
.section input{
    width: 593rpx;
	height: 70rpx;
	border-radius: 35rpx;
	border: solid 2rpx #eeeeee;
    margin: 20rpx auto;
    /*color: #eeeeee;*/
    padding-left: 43rpx; 
}
.btn-area button{
    width: 630rpx;
	height: 70rpx;
	background-image: linear-gradient(90deg, 
		#7595f3 0%, 
		#4e77f0 100%);
	box-shadow: 0rpx 1rpx 7rpx 0rpx 
		rgba(130, 129, 129, 0.34);
	border-radius: 35rpx;
	font-size: 28rpx;
    color: #fff;
}
.forget_pass{
    width: 97rpx;
	height: 22rpx;
	font-size: 22rpx;
	line-height: 70rpx;
	letter-spacing: 0rpx;
	color: #426fe3;
    position: relative;
    top: -165rpx;
    right: -550rpx;
	z-index: 99;
}