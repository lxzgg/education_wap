/**app.wxss**/

.input .inner-input {
  padding: 28rpx 0;
  padding-right: 20rpx;
  display: flex;
  padding-left: 25rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.input .inner-input .input-title {
  font-size: 28rpx;
  padding: 0 25rpx;
  line-height: 53rpx;
}

.input .inner-input .input-input {
  flex: 1;
}

.input .inner-input .input-input input {
  font-size: 28rpx;
}

.icon-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.icon-list .icon-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 67rpx;
}

.icon-list .icon-item image {
  width: 100%;
  height: 100%;
}

.icon-list .icon-item:nth-child(5n+1) {
  margin-left: 0;
}

.icon-list .icon-item:nth-child(n+6) {
  margin-top: 40rpx;
}

.post {
  width: 443rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 60rpx;
  background-color: #577ef1;
  color: #ffffff;
  margin: 100rpx auto;
}
