/**app.wxss**/

.list .item {
  box-shadow: rgba(130, 129, 129, 0.34) 0 0 14rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}

.list .item .top {
  display: flex;
  padding: 0rpx 0rpx 20rpx 0rpx;
  border-bottom: 1px solid #eee;
}

.list .item .top .header-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 5rpx;
}

.list .item .top .header-img image {
  width: 100%;
  height: 100%;
}

.list .item .top .top-content {
  flex: 1;
  margin-left: 35rpx;
}

.list .item .top .top-content .content-top {
  display: block;
  font-size: 28rpx;
  line-height: 32rpx;
  height: 64rpx;
  overflow: hidden;
}

.list .item .top .top-content .content-bottom {
  display: flex;
  margin-top: 40rpx;
}

.list .item .top .top-content .content-bottom .bottom1 {
  font-size: 24rpx;
  display: block;
  color: #ffaa00;
  border: 1rpx solid #ffaa00;
  border-radius: 5rpx;
  padding: 2rpx 15rpx;
}

.list .item .top .top-content .content-bottom .bottom2 {
  margin-left: 20rpx;
  font-size: 22rpx;
  display: block;
  line-height: 40rpx;
  color: #999999;
}

.list .item .bottom {
  display: flex;
  padding-top: 20rpx;
}

.list .item .bottom .bottom-item {
  flex: 1;
  text-align: center;
}

.list .item .bottom .bottom-item .icon {
  font-size: 40rpx;
  display: inline-block;
  color: #999999;
}

.list .item .bottom .bottom-item .number {
  display: inline-block;
  font-size: 28rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  color: #999999;
}
.active{
  color: #ffaa00 !important;
}